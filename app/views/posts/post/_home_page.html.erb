  <div class="col single-post-card" id=<%= post_path(post.id) %>>
    <div class="card text-center">
      <div class="card-block">
        <h4 class="post-text card-header">
          <div class="posted-by">Posted by <%= post.user.name %></div>
        </h4>
        <div class="post-content">
          <div><%= truncate(post.title, :length => 60) %></div>
          <h3><%= post.title %></h3>
          <p><%= post.content %></p>
          <%= link_to "I'm interested", post_path(post.id), class: 'interested' %>
        </div>
      </div>
    </div><!-- card -->
  </div><!-- col-sm-3 -->