<div id="branch-main-content" class="container">
  <div class="row">
    <h1 class="page-title"><%= page_title %></h1>
    <%= render 'posts/partials/create_new_post', branch: branch %>
  </div><!-- row -->

  <div class="row">
    <%= render  'posts/partials/search_form',
                branch: branch,
                search_placeholder: search_placeholder %>
  </div><!-- row -->

  <div class="row">
    <%= render 'posts/partials/categories', branch: branch %>
  </div>

  <div class="row">
    <div class="col-sm-12" id="feed">
      <%= render posts %>
      <%= render no_posts_partial_path %>
    </div>
  </div><!-- row -->

  <div class="infinite-scroll">
    <%= will_paginate posts %>
  </div>
</div><!-- container -->