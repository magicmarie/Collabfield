<div class="container" id="sign-up-form">
    <h1>Get in touch with like-minded people</h1>
    <br>
    <h2>Create, study, accomplish goals together</h2>
      <h3>Sign up <small>it's free!</small></h3>

      <%= form_for(resource,
                       :as => resource_name,
                       :url => registration_path(resource_name)) do |f| %>
        <label >Name</label>
        <%= f.text_field :name,
                        placeholder: 'username',
                        class: 'form-control'%>
        <label >Email address</label>
        <%= f.text_field :email,
                        placeholder: 'email',
                        class: 'form-control'%>
        <label>Password</label>
        <%= f.text_field :password,
                        placeholder: 'password',
                        class: 'form-control'%>
      <label>Password confirmation</label>
        <%= f.text_field :password_confirmation,
                          placeholder: 'confirm password',
                          class: 'form-control'%>

        <%= f.submit 'Sign Up', class: 'form-control btn sign-up-button' %>

      <% end %>
</div>